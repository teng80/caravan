package question;

public class Arithmetic {

	public int process() {
	
		int op1;
		String op;
		int op2;
		int result
	
		if (op.equals("+")) {
			result = op1+op2;
		} else if (op.equals("-")) {
			result = op1-op2;
		} else if (op.equals("*")) {
			result = op1*op2;
		} else if (op.equals("/")) {
			if (op2 == 0) {
				System.out.println("0으로 나눌 수 없습니다.");
//				프로그램 종료
				break;
			} else {
				result = op1/op2;
			}
		} else {
			System.out.println("사칙연산이 아닙니다.");
		}

		System.out.println(op1+op+op2+"의 계산 결과는 "+res);
}
